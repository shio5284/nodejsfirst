<%- include('../_partial/_header.ejs') %>


<div class="row">
    <div class="col-md-6">
             My Post
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <a href="/posts/add" type="button" class="btn btn-lg btn-primary btn=-block">New Post</a>
    </div>
</div>



<!--         List  of all posts -->
<div class="row">
<% posts.forEach(function(post){ %>
       <div class="col-sm-4 col-md-4">
     <div class="thumbnail">
        <% if (post.image !=null) {%>
<img src="<%= '/' + post.image %> "
        alt="logo"
        style="height: 200px; width: 100; display: block"
        >

            <%} else{%>

<img src=""
        alt="logo"
        style="height: 200px; width: 100; display: block"
        >

            <%}%>

        
        <div class="caption">
            <h3> <%=post.title %></h3>                                 
            <p> <%=post.content %><p>
                <p> <a href="posts/<%= post._id %>" class="btn btn-lg btn-primary btn=-block" role="button">read</a>
                    
                    <a href ="posts/edit/<%= post._id %>" " class="btn btn-default"role="button">edit</a>
        </div>
     </div>
    </div>

<% })%>

</div>
<%-include('../_partial/_footer.ejs') -%>